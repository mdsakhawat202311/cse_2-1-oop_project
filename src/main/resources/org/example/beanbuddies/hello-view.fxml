<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.beanbuddies.HelloController">
    <left>
        <VBox spacing="10.0" prefWidth="300.0" style="-fx-background-color: #2B2B2B;">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <Label text="My Courses" style="-fx-font-size:18px; -fx-text-fill: white;" />
            <TextField fx:id="searchField" promptText="Search courses..." />
            <ListView fx:id="courseListView" VBox.vgrow="ALWAYS" />
            <HBox spacing="8.0">
                <Label text="Status:" style="-fx-text-fill: white;" />
                <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: lightgray;" />
            </HBox>
        </VBox>
    </left>

    <center>
        <StackPane>
            <VBox spacing="12.0">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>
                <HBox spacing="12.0">
                    <ImageView fx:id="courseImage" fitWidth="220.0" fitHeight="120.0" preserveRatio="true" />
                    <VBox spacing="6.0">
                        <Label fx:id="courseTitle" style="-fx-font-size:20px; -fx-font-weight: bold;" />
                        <Label fx:id="courseInstructor" style="-fx-text-fill: gray;" />
                        <Label fx:id="courseMeta" style="-fx-text-fill: #666;" />
                    </VBox>
                </HBox>

                <Label text="Description" style="-fx-font-weight: bold;" />
                <TextArea fx:id="courseDescription" wrapText="true" editable="false" prefRowCount="6" />

                <HBox spacing="10.0">
                    <Button fx:id="previewButton" text="Preview" />
                    <Button fx:id="enrollButton" text="Enroll" style="-fx-background-color: #2a9df4; -fx-text-fill: white;" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label fx:id="selectedCountLabel" text="0 courses" />
                </HBox>
            </VBox>

            <!-- Hidden preview pane that will show a WebView when Preview is clicked -->
            <Pane fx:id="previewPane" visible="false" style="-fx-background-color: rgba(0,0,0,0.75);">
                <VBox alignment="CENTER" spacing="6.0" prefWidth="800.0" prefHeight="600.0" layoutX="40" layoutY="40">
                    <HBox alignment="CENTER_RIGHT">
                        <Button text="Close Preview" onAction="#onClosePreview" />
                    </HBox>
                    <WebView fx:id="previewWebView" prefWidth="900" prefHeight="560" />
                </VBox>
            </Pane>
        </StackPane>
    </center>
</BorderPane>
